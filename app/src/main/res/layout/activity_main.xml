<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@android:color/darker_gray"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GridLayout"
            android:padding="10dp"
            android:columnCount="3"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/temp_View"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_width="30dp"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <ImageView
                android:src="@drawable/frontprofile"
                android:id="@+id/image_view_front"
                android:background="@android:color/white"
                android:layout_weight="0.07"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:contentDescription="image"
                android:layout_column="1"
                android:layout_columnWeight="0"/>
            <ImageView
                android:src="@drawable/sideprofile"
                android:id="@+id/image_vieww_side"
                android:background="@android:color/white"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_column="2"
                android:layout_columnWeight="0"/>
        </GridLayout>
    </LinearLayout>

    <ScrollView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:padding="17dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:text="Passport"
                    android:textAlignment="center"
                    android:id="@+id/NameField" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:text="Name:"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Name"
                    android:gravity="left"
                    android:ems="10"
                    android:textColor="@android:color/darker_gray"
                    android:hint="@string/name_editText"
                    android:textSize="12sp" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Surname:"
                    android:textColor="@android:color/white"
                    android:id="@+id/editText"
                    android:gravity="center"
                    android:ems="10"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:text="Surname"
                    android:ems="10"
                     android:textColor="@android:color/darker_gray"
                    android:hint="@string/surname_editText"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <EditText
                    android:paddingLeft="1dp"
                    android:text="Nationality:"
                    android:hint="Nationality"
                    android:inputType="text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/background_light"
                    android:textSize="18sp"
                    android:ems="8"
                    android:gravity="center" />

                <CheckBox
                    android:text="EU Citizen"
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:duplicateParentState="false"
                    tools:text="EU Citizen"
                    android:contentDescription="@string/checkbox"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    android:layout_gravity="right">/</CheckBox>

            </TableRow>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
             android:layout_width="match_parent">
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backgroundpic"
            android:id="@+id/backgroundImg"
            android:scaleType="centerCrop"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/ic_launcher"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_gravity="bottom"
            android:gravity="center">


            <Button
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/left_btn"
                 android:textColor="#34b217" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/center_bt"
                android:textColor="#FF0000" />

            <Button
                android:text="Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/right_btn"/>
        </LinearLayout>


</LinearLayout>
